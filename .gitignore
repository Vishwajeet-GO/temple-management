$gitignore = @'
# Database
*.db
*.sqlite
*.sqlite3

# Environment files
.env
.env.local
.env.production

# Binary files
*.exe
*.exe~
*.dll
*.so
*.dylib
main
newapp

# IDE and Editor
.idea/
.vscode/
*.swp
*.swo
*.sublime-*

# OS Files
.DS_Store
Thumbs.db
desktop.ini

# Logs
*.log
logs/

# Temporary files
tmp/
temp/

# Build output
dist/
build/

# Go specific
vendor/
'@

Set-Content -Path ".gitignore" -Value $gitignore -Encoding UTF8
Write-Host "âœ“ Created .gitignore" -ForegroundColor Green